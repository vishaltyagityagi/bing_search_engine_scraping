<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Bing search</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.Bing_search %></td>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.url %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Download CSV list', products_path(format: :csv) %>
<%= link_to 'New Product', new_product_path %>
