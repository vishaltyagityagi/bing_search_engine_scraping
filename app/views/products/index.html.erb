<p id="notice"><%= notice %></p>

<h1>Listing Search Result</h1>

<table>
  <thead>
    <tr>
      <th>Search</th>
      
      <th>Download</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% if @products.present? %>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.search %></td>
        <td><%= link_to "Download as CSV", download_path(product, :format => "csv") %></td>
        <td><%= link_to "Delete", product_path(product), method: "delete" %></td>
        

      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Search', new_product_path %>
