
<table align="center">
 <thead>
    <tr>
      <th>Single Search</th>
      <th>Keywords Search</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <tr>
  <td>
	<%= form_tag('/bing_serch') do  %>
	<%= search_field_tag 'search', nil, placeholder: "Enter keyword" %>
	  <div><%= submit_tag 'Search with single keyword' %></div>
	<% end %>
</td>
<td>
	<%= form_tag('/bing_serch') do  %>
	<%= search_field_tag 'search', nil, placeholder: "Enter keywords" %>
	    <%= hidden_field_tag 'keyword', "keyword"%>
	  <div><%= submit_tag 'Search with multiple keywords' %></div>
	<% end %>
	</td>	
	</tr>
</tbody>
</table>